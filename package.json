{
  "name": "real-estate-monitor",
  "productName": "Vira-lata Caramelo",
  "version": "0.1.0-alpha",
  "description": "Monitors multiple brazilian Real Estate websites based on search parameters",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [
    "real estate",
    "tracker",
    "electron",
    "quinto andar"
  ],
  "author": {
    "name": "Joao Pedro Santos de Moura",
    "email": "moura.joaopedro@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "real_estate_monitor",
            "setupIcon": "assets/images/icons/favicon.ico",
            "iconUrl": "https://github.com/jpmoura/vira-lata-caramelo/blob/master/assets/images/icons/favicon.ico?raw=true"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "6.0.0-beta.61",
    "@types/cron": "^1.7.3",
    "@types/node-schedule": "^1.3.2",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "commitizen": "^4.2.4",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-webpack": "^7.0.3",
    "electron": "15.5.5",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^14.0.2",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.1"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/roboto": "^4.5.1",
    "@mui/icons-material": "^5.0.3",
    "@mui/material": "^5.0.3",
    "@react-google-maps/api": "^2.5.0",
    "axios": "^0.24.0",
    "electron-squirrel-startup": "^1.0.0",
    "formik": "^2.2.9",
    "node-schedule": "^2.0.0",
    "pouchdb": "^7.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "usehooks-ts": "^1.0.7",
    "yup": "^0.32.11",
    "yup-locale-pt": "^0.0.8"
  }
}
